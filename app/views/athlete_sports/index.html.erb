<p id="notice"><%= notice %></p>

<h1>Athlete Sports</h1>

<table>
  <thead>
    <tr>
      <th>Athlete</th>
      <th>Sport</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @athlete_sports.each do |athlete_sport| %>
      <tr>
        <td><%= athlete_sport.athlete_id %></td>
        <td><%= athlete_sport.sport_id %></td>
        <td><%= link_to 'Show', athlete_sport %></td>
        <td><%= link_to 'Edit', edit_athlete_sport_path(athlete_sport) %></td>
        <td><%= link_to 'Destroy', athlete_sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

