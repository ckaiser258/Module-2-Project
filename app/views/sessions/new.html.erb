<h1>Athlete Login</h1>

<%if flash[:login_error] %>
    <p><%= flash[:login_error] %> </p>
<%end%>

<%= form_for :session, url: :sessions_create do |f| %>

<p>
    <%= f.label :email %>
    <%= f.text_field :email %>
</p>

<p>
    <%= f.label :password %>
    <%= f.text_field :password %>
</p>

<p>
    <%= f.button "Log In" %>
</p>
<%end%>