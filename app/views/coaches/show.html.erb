<p id="notice"><%= notice %></p>

<h1 style="margin-top: 30px; margin-left: 50px;"><%=@coach.name%></h1><br>


<p style="margin-left: 50px; margin-right: 50px;">
  <strong>Bio: </strong>
  <%= @coach.bio %>
</p>

<p style="margin-left: 50px;">
  <strong>Email: </strong>
  <%= mail_to @coach.email %>
</p>

<p style="margin-left: 50px;">
  <strong>Programs: </strong>
  <% @coach.programs.each do |p| %>
    <%= link_to p.title, program_path(p) %><br>
  <% end %>
</p>

<p style="margin-left: 50px;">
  <strong>Sports: </strong>
  <% @coach.sports.each do |p| %>
    <%= p.name %><br>
  <% end %>
</p>

<% if current_user && current_user.id == params[:id].to_i && check_coach %>
  <%= current_user.athletes.each do |athlete| %>
    <%= athlete.name %>
    <%= athlete.email %>
  <%end%>
<% end %>



<br/>
<div style="margin-left: 50px;">
<%= link_to 'Edit Profile/Add Athlete/Create Program', edit_coach_path(@coach) %>
</div>
